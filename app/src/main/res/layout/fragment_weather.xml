<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weather_background"
    tools:context=".ui.weather.WeatherFragment">

    <TextView
        android:id="@+id/tv_plaats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tempratuur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_image"
        app:layout_constraintStart_toStartOf="@+id/iv_image"
        app:layout_constraintTop_toBottomOf="@+id/iv_image" />

    <TextView
        android:id="@+id/tv_kans_neerslag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_tempratuur"
        app:layout_constraintStart_toStartOf="@+id/tv_tempratuur"
        app:layout_constraintTop_toBottomOf="@+id/tv_tempratuur" />

    <TextView
        android:id="@+id/tv_windr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_kans_neerslag"
        app:layout_constraintStart_toStartOf="@+id/tv_kans_neerslag"
        app:layout_constraintTop_toBottomOf="@+id/tv_kans_neerslag" />

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_dag"
        app:layout_constraintStart_toStartOf="@+id/tv_dag"
        app:layout_constraintTop_toBottomOf="@+id/tv_dag" />

    <TextView
        android:id="@+id/tv_dag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_plaats"
        app:layout_constraintStart_toStartOf="@+id/tv_plaats"
        app:layout_constraintTop_toBottomOf="@+id/tv_plaats" />

    <TextView
        android:id="@+id/tv_samenvatting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_windr"
        app:layout_constraintStart_toStartOf="@+id/tv_windr"
        app:layout_constraintTop_toBottomOf="@+id/tv_windr" />
</androidx.constraintlayout.widget.ConstraintLayout>