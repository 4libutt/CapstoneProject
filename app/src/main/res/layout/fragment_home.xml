<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.HomeFragment">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/logo"
            android:padding="4dp"
            android:src="@drawable/logo_widget" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/logo_radius"
            android:src="@drawable/frame" />

    </FrameLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mapBtn"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginBottom="68dp"
        android:src="@drawable/logo_widget"
        android:text="@string/map"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:backgroundTint="@color/festivan_color"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/stripe_color"
        app:strokeWidth="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/checklist"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:src="@drawable/logo_widget"
        android:text="@string/check_list"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:backgroundTint="@color/festivan_color"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/mapBtn"
        app:layout_constraintEnd_toStartOf="@+id/mapBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mapBtn"
        app:strokeColor="@color/stripe_color"
        app:strokeWidth="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/entryTicket"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:src="@drawable/logo_widget"
        android:text="@string/entry_ticket"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:backgroundTint="@color/festivan_color"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/mapBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mapBtn"
        app:layout_constraintTop_toTopOf="@+id/mapBtn"
        app:strokeColor="@color/stripe_color"
        app:strokeWidth="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/paymentOverview"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:src="@drawable/logo_widget"
        android:text="@string/payment_overview"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:backgroundTint="@color/festivan_color"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/frameLayout"
        app:layout_constraintEnd_toStartOf="@+id/frameLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/frameLayout"
        app:strokeColor="@color/stripe_color"
        app:strokeWidth="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/stageList"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:src="@drawable/logo_widget"
        android:text="@string/stage_list"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:backgroundTint="@color/festivan_color"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/frameLayout"
        app:layout_constraintTop_toTopOf="@+id/frameLayout"
        app:strokeColor="@color/stripe_color"
        app:strokeWidth="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/weather"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/logo_widget"
        android:text="@string/weather"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:backgroundTint="@color/festivan_color"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:strokeColor="@color/stripe_color"
        app:strokeWidth="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/friends"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:src="@drawable/logo_widget"
        android:text="@string/friends"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:backgroundTint="@color/festivan_color"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/weather"
        app:layout_constraintEnd_toStartOf="@+id/weather"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/weather"
        app:strokeColor="@color/stripe_color"
        app:strokeWidth="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/myPlanning"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:src="@drawable/logo_widget"
        android:text="@string/my_planning"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:backgroundTint="@color/festivan_color"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/weather"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/weather"
        app:layout_constraintTop_toTopOf="@+id/weather"
        app:strokeColor="@color/stripe_color"
        app:strokeWidth="4dp" />
</androidx.constraintlayout.widget.ConstraintLayout>